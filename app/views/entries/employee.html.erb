<div class="mx-auto bg-white">
  <h4 class="header font-bold text-xl mb-4">New Entry</h4>
  <%= simple_form_for(@entry) do |f| %>
    <div class="space-y-4">
      <div class="flex items-center space-x-4">
        <div class="w-1/4">
          <%= f.label :company, class: 'block text-sm font-medium text-gray-700' %>
        </div>
        <div class="w-3/4">
          <%= f.input_field :company, class: 'block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm', required: true %>
          <span class="mt-2 hidden text-sm text-red-500 peer-[&:not(:placeholder-shown):not(:focus):invalid]:block">
            Field mandatory
          </span>
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <div class="w-1/4">
          <%= f.label :kwh, class: 'block text-sm font-medium text-gray-700' %>
        </div>
        <div class="w-3/4">
          <%= f.input_field :kwh, class: 'block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <div class="w-1/4">
          <%= f.label :startdate, "Start", class: 'block text-sm font-medium text-gray-700' %>
        </div>
        <div class="w-3/4">
          <%= f.input_field :startdate, html5: true, required: true, class: 'block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>
      </div>
      <div class="flex items-center space-x-4">
        <div class="w-1/4">
          <%= f.label :enddate, "End", class: 'block text-sm font-medium text-gray-700' %>
        </div>
        <div class="w-3/4">
          <%= f.input_field :enddate, html5: true, required: true, class: 'block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
        </div>
      </div>
      <div class="flex justify-end">
        <%= f.submit 'Submit', class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      </div>
    </div>
  <% end %>
</div>
